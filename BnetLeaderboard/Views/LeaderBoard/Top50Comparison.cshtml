@model ComparativeLadderResult

@{
    ViewBag.Title = "Comparative Ladder Results";
    var rank = 1;
}

<h2>Comparative Ladder Results</h2>


<table style="margin: 0px auto;">
    <th style="padding-right: 50px">Rank</th>
    <th style="padding-right: 50px">Name</th>
    <th style="padding-right: 50px">Race</th>
    <th style="padding-right: 50px">MMR</th>
    @foreach (var item in Model.Result)
    {
        <tr>
            <td>
                @rank
            </td>
            <td>
                <img src="~/img/Eu.png" style="width: 18px; height: 18px"/>@Html.DisplayFor(modelItem => item.EuResult.TeamMembers.FirstOrDefault().DisplayName)
                <img src="~/img/Us.png" style="width: 18px; height: 18px"/>@Html.DisplayFor(modelItem => item.UsResult.TeamMembers.FirstOrDefault().DisplayName)
            </td>
            <td>
                <img src="~/img/Eu.png" style="width: 18px; height: 18px"/>@Html.DisplayFor(modelItem => item.EuResult.TeamMembers.FirstOrDefault().FavoriteRace)
                <img src="~/img/Us.png" style="width: 18px; height: 18px"/>@Html.DisplayFor(modelItem => item.UsResult.TeamMembers.FirstOrDefault().FavoriteRace)
            </td>
            <td>
                <img src="~/img/Eu.png" style="width: 18px; height: 18px"/>@Html.DisplayFor(modelItem => item.EuResult.Mmr)
                <img src="~/img/Us.png" style="width: 18px; height: 18px"/>@Html.DisplayFor(modelItem => item.UsResult.Mmr)
            </td>
        </tr>
        rank++;
    }
</table>